{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "command": ["rm -rf node_modules package-lock.json &&",
                        "npm install"],
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": {
                "base": "$gcc", "fileLocation": ["relative", "${workspaceFolder}"]
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "command": ["npm start"],
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": {
                "base": "$gcc", "fileLocation": ["relative", "${workspaceFolder}"]
            }
        }
    ]
}
