{
  "name": "audible-for-linux",
  "author": "Marcus Tomlinson",
  "version": "0.4.0",
  "description": "Audible for Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux snap"
  },
  "build": {
    "appId": "audible-for-linux",
    "productName": "Audible",
    "linux": {
      "target": "snap",
      "icon": "audible-for-linux.png",
      "category": "Audio"
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict",
      "plugs": [
        "audio-playback",
        "browser-support",
        "desktop",
        "desktop-legacy",
        "home",
        "network",
        "opengl",
        "x11"
      ],
      "desktop": {
        "StartupWMClass": "audible-for-linux"
      }
    }
  },
  "repository": "https://github.com/cross-platform/audible-for-linux",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^9.0.2",
    "electron-builder": "^22.7.0"
  }
}
